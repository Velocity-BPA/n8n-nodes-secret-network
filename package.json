{
  "name": "n8n-nodes-secret-network",
  "version": "1.0.0",
  "description": "n8n community node for Secret Network",
  "license": "SEE LICENSE IN LICENSE.md",
  "main": "dist/nodes/Secret Network/Secret Network.node.js",
  "keywords": [
    "n8n",
    "n8n-community-node-package",
    "secret-network",
    "blockchain",
    "privacy"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.1.4",
  "files": [
    "dist/**/*"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/SecretNetworkApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Secret Network/Secret Network.node.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "n8n-workflow": "*",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.2",
    "typescript": "^5.5.3",
    "eslint-plugin-n8n-nodes-base": "^1.16.1"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bech32": "*",
    "secp256k1": "*"
  },
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "format": "prettier nodes credentials --write",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  }
}